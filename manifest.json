{
	"manifest_version": 2,
	"name": "Cats Help You Quit Social",
	"description": "Remove the temptation to check social media sites. Cats Help You Quit Social will show you a cute cat video every time you try to check social media sites.",
	"version": "0.1",
	"background": {
		"scripts": ["background/background.js"],
		"persistent" : true
	},
	"icons": {
		"19": "images/cat-icon.png"
	},
	"browser_action": {
		"default_title": "Cats Help You Quit Social",
		"default_icon": "images/cat-icon.png"
	},
	"options_page": "options/options.html",
	"permissions": [
		"background",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://*.facebook.com/",
		"*://*.twitter.com/"
	]
}
